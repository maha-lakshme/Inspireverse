<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fill color can be transparent or a chosen color -->

    <stroke
        android:width="0dp"
        android:color="@color/pink_img" />
    <gradient
        android:startColor="#231c35"
        android:centerColor="#6e5774"
        android:endColor="#231c35"
        android:angle="90"

        />
    <!-- Corners: top corners remain 0dp, bottom corners rounded -->
    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />
</shape>
